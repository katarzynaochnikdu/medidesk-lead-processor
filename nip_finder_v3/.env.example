# NIP Finder V3 Ultimate - Environment Variables
# Copy to .env and fill with your values

# ============================================
# GOOGLE CLOUD / VERTEX AI
# ============================================
# Required for AI-powered features
VERTEX_AI_PROJECT_ID=your-gcp-project-id
VERTEX_AI_LOCATION=europe-central2
VERTEX_AI_MODEL=gemini-1.5-pro-002

# ============================================
# APIFY (for Google Search)
# ============================================
# Get token from https://console.apify.com/account/integrations
APIFY_API_TOKEN=apify_api_xxxxxxxxxxxxxxxxxxxxxxxxxx
APIFY_GOOGLE_ACTOR_ID=apify/google-search-scraper
APIFY_ACTOR_TIMEOUT_SEC=300

# ============================================
# GOOGLE CUSTOM SEARCH JSON API (Alternative)
# ============================================
# Optional - can use instead of Apify
# Get from Google Cloud Console
GOOGLE_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# ============================================
# BRAVE SEARCH API
# ============================================
BRAVE_SEARCH_API_KEY=your-brave-search-api-key

# ============================================
# GUS/REGON API
# ============================================
GUS_API_KEY=your-gus-production-api-key
GUS_USE_TEST=false

# ============================================
# SCRAPER API / BRIGHT DATA (Optional)
# ============================================
# For proxy-based scraping with anti-block
SCRAPER_API_KEY=

# ============================================
# STRATEGY TOGGLES
# ============================================
# Enable/disable strategies
ENABLE_CACHE=true
ENABLE_AI_ENRICHMENT=true
ENABLE_PRIVACY_SCRAPING=true
ENABLE_GUS_SEARCH=true
ENABLE_GOOGLE_SEARCH=true
ENABLE_AI_DOMAIN_DISCOVERY=true
ENABLE_HOMEPAGE_SCRAPING=true
ENABLE_DEEP_SCRAPING=false
ENABLE_AI_WEB_ANALYSIS=false
ENABLE_BRAVE_SEARCH=true
ENABLE_DEEP_AI_SEARCH=false
ENABLE_MULTI_SOURCE_VALIDATION=true

# ============================================
# CACHE SETTINGS
# ============================================
CACHE_DB_PATH=nip_finder_v3/cache.db
CACHE_TTL_DAYS=30
CACHE_FRESHNESS_WARNING_DAYS=14

# ============================================
# VALIDATION SETTINGS
# ============================================
REQUIRE_CHECKSUM_VALIDATION=true
REQUIRE_DOMAIN_VALIDATION=true
REQUIRE_GUS_VALIDATION=false
FUZZY_MATCH_THRESHOLD=0.70

# ============================================
# AI SETTINGS
# ============================================
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=1000

# ============================================
# GOOGLE SEARCH SETTINGS
# ============================================
MAX_GOOGLE_RESULTS=10
GOOGLE_SEARCH_COUNTRY=pl
GOOGLE_SEARCH_LANGUAGE=pl

# ============================================
# PERFORMANCE SETTINGS
# ============================================
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT_SEC=30
BRAVE_RATE_LIMIT_PER_SEC=1.0

# ============================================
# COST SETTINGS
# ============================================
MAX_COST_PER_LEAD=0.15
MIN_CONFIDENCE_THRESHOLD=0.60
MIN_SOURCES_AGREEMENT=2
REJECT_LOW_CONFIDENCE_WITHOUT_DOMAIN=true

# ============================================
# SCRAPING SETTINGS
# ============================================
SCRAPING_TIMEOUT_SEC=10
MAX_SCRAPING_ATTEMPTS=3
MAX_PAGES_TO_SCRAPE=10

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
ENVIRONMENT=development
